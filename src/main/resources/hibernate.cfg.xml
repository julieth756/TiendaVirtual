<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tiendavirtual</property>
    <property name="hibernate.connection.username">ingenieria</property>
    <property name="hibernate.connection.password">Ingenieria2015*</property>
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">update</property>
    <property name="hibernate.transaction.factory_class">org.hibernate.transaction.JDBCTransactionFactory</property>
    <property name="connection.pool_size">1</property>
    <property name="current_session_context_class">thread</property
    <property name="hibernate.connection.autocommit">true</property>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Ordenproductodetalle.hbm.xml"/>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Rol.hbm.xml"/>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Subcategoria.hbm.xml"/>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Producto.hbm.xml"/>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Usuario.hbm.xml"/>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Entregacosto.hbm.xml"/>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Categoria.hbm.xml"/>
    <mapping resource="com/edu/unbosque/tiendaonline/entidad/Ordenproducto.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
